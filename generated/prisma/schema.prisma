generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @unique @default(cuid())
  email    String  @unique
  username String  @unique
  password String
  avatar   String?

  role             UserRole     @default(REGISTERED)
  steamUser        SteamUser?   @relation
  commentsAsAuthor Comment[]    @relation()
  jwtTokens        JwtToken[]
  reportUsers      ReportUser[] @relation()
  verdicts         Verdict[]    @relation()

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model SteamUser {
  id          String  @id @unique
  personaName String  @map("persona_name")
  profileUrl  String  @map("profile_url")
  avatar      String
  realname    String?
  timeCreated String  @map("time_created")

  user                User?        @relation(fields: [userId], references: [id])
  userId              String?      @unique @map("user_id")
  commentsAsRecipient Comment[]    @relation()
  reportsAsRecipient  ReportUser[] @relation()

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("steam_user")
}

model Comment {
  id         String  @id @unique @default(cuid())
  content    String
  pictureUrl String?

  author      User      @relation(fields: [authorId], references: [id])
  authorId    String    @map("author_id")
  recipient   SteamUser @relation(fields: [recipientId], references: [id])
  recipientId String    @map("recipient_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([authorId, recipientId]) // Ограничение на уникальность комментария от автора к получателю
  @@map("comment")
}

model JwtToken {
  id           String @id @unique @default(cuid())
  refreshToken String @map("refresh_token")
  user         User   @relation(fields: [userId], references: [id])
  userId       String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("jwt_token")
}

model ReportUser {
  id            Int      @id @unique @default(autoincrement())
  youtubeLink   String   @unique @map("youtube_link")
  demoLink      String?
  reasonsReport String[]
  comment       String?

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  recipient   SteamUser @relation(fields: [recipientId], references: [id])
  recipientId String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  verdicts Verdict[] @relation()

  @@unique([authorId, recipientId])
  @@map("report_user")
}

model Verdict {
  id       Int        @id @unique @default(autoincrement())
  user     User       @relation(fields: [userId], references: [id])
  userId   String
  report   ReportUser @relation(fields: [reportId], references: [id])
  reportId Int
  verdicts String[] // Массив строк для хранения вердиктов

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("verdict")
}

enum UserRole {
  REGISTERED // Обычный пользователь
  VERIFIED_EMAIL // Верифицированный пользователь по почте
  VERIFIED_STEAM // Верифицированный пользователь по Steam
  MODERATOR // Модератор
  ADMIN // Администратор
  CREATOR

  @@map("user_role")
}
