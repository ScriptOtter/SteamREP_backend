generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  username String  @unique
  password String
  avatar   String?

  role                UserRole  @default(REGISTERED)
  commentsAsAuthor    Comment[] @relation("CommentAuthor")
  commentsAsRecipient Comment[] @relation("CommentRecipient")

  jwtTokens JwtToken[]

  @@map("user")
}

model Comment {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  content     String
  author      User   @relation("CommentAuthor", fields: [authorId], references: [id])
  authorId    String
  recipient   User   @relation("CommentRecipient", fields: [recipientId], references: [id])
  recipientId String

  @@unique([authorId, recipientId]) // Ограничение на уникальность комментария от автора к получателю
  @@map("comment")
}

model JwtToken {
  id           String @id @unique @default(cuid())
  refreshToken String
  user         User   @relation(fields: [userId], references: [id])
  userId       String

  @@map("jwt_token")
}

enum UserRole {
  REGISTERED // Обычный пользователь
  VERIFIED_EMAIL // Верифицированный пользователь по почте
  VERIFIED_STEAM // Верифицированный пользователь по Steam
  MODERATOR // Модератор
  ADMIN // Администратор

  @@map("user_role")
}
