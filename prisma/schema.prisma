generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @unique @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email String @unique
  username String @unique
  password String
  avatar String? 

  role                UserRole   @default(REGISTERED) 
  commentsAsAuthor     Comment[] @relation("CommentAuthor")
  commentsAsRecipient   Comment[] @relation("CommentRecipient")

  jwtTokens           JwtToken[]

  @@map("user")
}

model Comment {
  id          String   @unique @id @default(cuid())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  content     String
  author      User     @relation("CommentAuthor", fields: [authorId], references: [id])
  authorId    String  @map("author_id")
  recipient   User     @relation("CommentRecipient", fields: [recipientId], references: [id])
  recipientId String  @map("recipient_id")

  @@unique([authorId, recipientId]) // Ограничение на уникальность комментария от автора к получателю
  @@map("comment")
}

model JwtToken {
  id          String   @unique @id @default(cuid())
  refreshToken    String @map("refresh_token")
  user     User   @relation(fields: [userId], references: [id])
  userId   String

  @@map("jwt_token")
}

model SteamUser {
  id String @unique
  personaName String @map("persona_name")
  profileUrl String @map("profile_url")
  avatar String
  realname String?
  timeCreated String @map("time_created")

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("steam_user")
}

enum UserRole {
  REGISTERED          // Обычный пользователь
  VERIFIED_EMAIL // Верифицированный пользователь по почте
  VERIFIED_STEAM // Верифицированный пользователь по Steam
  MODERATOR      // Модератор
  ADMIN          // Администратор

  @@map("user_role")
}
